{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"slug": "section-1",
	"title": "Style 1",
	"blockTypes": [
		"core/group"
	],
	"styles": {
        "css": "& > p,  & > .wp-block-term-description { text-transform: uppercase; }",
        "color": {
            "text": "var(--wp--preset--color--contrast)",
            "gradient": "var(--wp--preset--gradient--gradient-2)"
        },
        "typography": {
            "fontSize": "var(--wp--preset--font-size--x-small)",
            "fontWeight": "300"
        },
        "spacing":{
            "margin": {
                "bottom":"0",
                "top":"0"
            },
            "padding": {
                "bottom": "var(--wp--preset--spacing--80)",
                "top": "var(--wp--preset--spacing--80)"
            }
        },
        "elements": { 
            "heading": {
                "typography": {
                    "fontSize": "48px"
                },
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
                "spacing":{
                    "margin": {
                        "top":"var:preset|spacing|10"
                    }
                }
			}
        }
    }
}