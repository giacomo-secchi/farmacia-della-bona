{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"slug": "section-2",
	"title": "Style 2",
	"blockTypes": [
		"core/group",
        "core/cover"
	],
	"styles": {
        "blocks": {
            "core/paragraph": {
                "typography": {
                    "textAlign": "center",
                    "textTransform": "uppercase" 
                }
            }
        },
        "color": {
            "text": "var:preset|color|base",
            "gradient": "var:preset|gradient|gradient-1"
        },
        "typography": {
            "fontSize": "var:preset|font-size|x-small",
            "fontWeight": "300"
        },
        "spacing":{
            "margin": {
                "bottom":"0",
                "top":"0"
            },
            "padding": {
                "bottom": "var:preset|spacing|80",
                "top": "var:preset|spacing|80"
            }
        },
        "shadow": "var:preset|shadow|inner",
        "elements": { 
            "heading": {
                "typography": {
                    "fontSize": "48px",
                    "textAlign": "center"
                },
				"color": {
					"text": "var:preset|color|base"
				},
                "spacing":{
                    "margin": {
                        "bottom":"var:preset|spacing|20",
                        "top":"var:preset|spacing|10"
                    }
                }
			}
        }
    }
}