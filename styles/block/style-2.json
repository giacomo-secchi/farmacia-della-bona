{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"slug": "section-2",
	"title": "Style 2",
	"blockTypes": [
		"core/group"
	],
	"styles": {
        "css": "& > p { text-transform: uppercase; }",
        "color": {
            "text": "var(--wp--preset--color--base)",
            "gradient": "var(--wp--preset--gradient--gradient-2)"
        },
        "typography": {
            "fontSize": "var(--wp--preset--font-size--x-small)",
            "fontWeight": "300"
        },
        "spacing":{
            "margin": {
                "bottom":"0",
                "top":"0"
            },
            "padding": {
                "bottom": "var(--wp--preset--spacing--60)",
                "top": "var(--wp--preset--spacing--60)"
            }
        },
        "shadow": "var(--wp--preset--shadow--inner)",
        "elements": { 
            "heading": {
                "typography": {
                    "fontSize": "48px"
                },
				"color": {
					"text": "var(--wp--preset--color--base)"
				},
                "spacing":{
                    "margin": {
                        "top":"var:preset|spacing|10"
                    }
                }
			}
        }
    }
}