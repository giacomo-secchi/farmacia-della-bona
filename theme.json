{
	"$schema": "https://schemas.wp.org/wp/6.9/theme.json",
	"version": 3,
	"settings": {
		"color": {
			"gradients": [
				{
					"gradient": "linear-gradient(to bottom, var(--wp--preset--color--base) 0%, var(--wp--preset--color--primary-light-100) 100%)",
					"name": "Vertical soft beige to white",
					"slug": "gradient-1"
				},
				{
					"gradient": "linear-gradient(to bottom, var(--wp--preset--color--base) calc(100% - 600px), var(--wp--preset--color--base) calc(100% - 300px), var(--wp--preset--color--light-100) 100%)",
					"name": "Vertical soft beige to white",
					"slug": "gradient-2"
				}
			],
			"palette": [
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#555555",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#348d70",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#fbfefd",
					"name": "Primary Light (100)",
					"slug": "primary-light-100"
				},
				{
					"color": "#daf1e9",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#f5f5f5",
					"name": "Neutral",
					"slug": "neutral"
				},
				{
					"color": "#413DC0",
					"name": "Purple",
					"slug": "purple"
				},
				{
					"color": "#812A2C",
					"name": "Brown",
					"slug": "brown"
				},
				{
					"color": "#D2CC2C",
					"name": "yellow",
					"slug": "yellow"
				}
			]
		},
		"shadow": {
			"defaultPresets": false,
			"presets": [
				{
					"name": "Inner",
					"shadow": "inset 10px 151px 200px 90px rgb(0 0 0 / 39%)",
					"slug": "inner"
				}
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "\"Helvetica Neue\", Helvetica, Arial, Inter, sans-serif",
					"name": "Helvetica Neue",
					"slug": "helvetica-neue"
				},
				{
					"fontFace": [
						{
							"fontFamily": "Inter",
							"fontStyle": "normal",
							"fontWeight": "200",
							"src": [
								"file:./assets/fonts/inter/inter-200-normal.woff2"
							]
						},
						{
							"fontFamily": "Inter",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/inter/inter-400-normal.woff2"
							]
						},
						{
							"fontFamily": "Inter",
							"fontStyle": "normal",
							"fontWeight": "600",
							"src": [
								"file:./assets/fonts/inter/inter-600-normal.woff2"
							]
						},
						{
							"fontFamily": "Inter",
							"fontStyle": "italic",
							"fontWeight": "200",
							"src": [
								"file:./assets/fonts/inter/inter-200-italic.woff2"
							]
						},
						{
							"fontFamily": "Inter",
							"fontStyle": "italic",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/inter/inter-400-italic.woff2"
							]
						},
						{
							"fontFamily": "Inter",
							"fontStyle": "italic",
							"fontWeight": "600",
							"src": [
								"file:./assets/fonts/inter/inter-600-italic.woff2"
							]
						}
					],
					"fontFamily": "Inter, sans-serif",
					"name": "Inter",
					"slug": "inter"
				}
			]
		}
	},
	"styles": {
		"blocks": {
			 "jetpack/contact-form": {
				"css": "& { --jetpack--contact-form--border-color: var(--wp--preset--color--neutral); }"
			},
			"core/navigation": {
				"css": "& .wp-block-navigation-item:hover { color: var(--wp--preset--color--contrast); }"
			},
			"jetpack/whatsapp-button": {
				"css": "& .whatsapp-block__button { border-radius: 50px !important; background-position: center !important; padding: var(--wp--preset--spacing--30) !important; box-shadow: var(--wp--preset--shadow--natural);}"
			},
			"jetpack/input": {
				"border": {
					"width": "1px",
					"style": "solid",
					"color": "var:preset|color|neutral"
				}
			},
			"jetpack/phone-input": {
				"border": {
					"width": "1px",
					"style": "solid",
					"color": "var:preset|color|neutral"
				}
			},
			"jetpack/text-area": {
				"border": {
					"width": "1px",
					"style": "solid",
					"color": "var:preset|color|neutral"
				}
			},
			"jetpack/label": {
				"typography": {
                    "fontSize": "var:preset|font-size|small",
                    "fontWeight": "400",
                    "textTransform": "initial" 
                }
			} 
		},
		"elements": {
			"link": {
				"css": "a, a:not(.wp-element-button) {text-decoration: none;}"
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--helvetica-neue)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"fontWeight": "300",
			"lineHeight": "var(--wp--custom--line-height--large)"
		}
	}
}